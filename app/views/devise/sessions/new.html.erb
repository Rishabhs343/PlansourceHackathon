<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container d-flex h-100 login_container">
    <div class="col-4">
    </div>
    <div class="col-4 justify-content-center align-self-center">
      <div class="form-inputs">
        <%= f.input :login,
                    required: false,
                    autofocus: true,
                    label: 'Employee Id',
                    input_html: { class: 'loginstyle' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } ,
                    input_html: { class: 'loginpassstyle' }%>
        <div class="form-actions loginform">
        <%= f.button :submit, "Login" ,class:"btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>

<% end %>