
<%= simple_form_for(@challenge) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title ,class:"form-group newform col-md-4"%>
    <%= f.input :description ,class:"form-group newform col-md-4"%>
    <%= f.input :tags , collection: ["Helvetica Arial, sans-serif", "Georgia, Times, serif"],class:"form-group newform col-md-4"%>
    <%= f.input :emp_id ,:as => :hidden, :input_html => { :value => current_user.emp_id }%>
    <%= f.association :user ,:as => :hidden, :input_html => { :value => current_user.id }%>
  </div>


  <div class="form-actions">
    <%= f.button :submit,class:'btn btn-primary' %>
  </div>
<% end %>
