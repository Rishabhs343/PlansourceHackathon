<%= simple_form_for(@challenge) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


<div class='d-flex'>
    <div class="formspace">
        <%= f.input :title ,class:"form-group newform", as: :string%>
    </div>

    <div class="formspace">
        <%= f.input :description ,class:"form-group newform", as: :string%>
    </div>

    <div class="formspace">
        <%= f.input :tags , collection: ["Ruby", "Python","Java","C","C++","JavaScript","Perl","Go","Web Apps","AWS","Git"],as: :collection_select,class:"form-group newform "%>
    </div>

    <div class="">
        <%= f.input :emp_id ,:as => :hidden, :input_html => { :value => current_user.emp_id }%>
    </div>

    <div class="">
        <%= f.association :user ,:as => :hidden, :input_html => { :value => current_user.id }%>
    </div>


    <div class="actions ">
        <%= f.button :submit,'Add Challenge' ,class:'btn btn-primary formbtn' %>
    </div>
</div>

<% end %>